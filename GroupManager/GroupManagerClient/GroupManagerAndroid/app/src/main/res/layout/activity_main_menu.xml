<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/helloUser"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|right"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginRight="10px" />

    <ImageButton
        android:id="@+id/createGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:src="@drawable/create_group_buttonx" />

    <ImageButton
        android:id="@+id/viewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:background="@android:color/transparent"
        android:layout_marginTop="15dp"
        android:src="@drawable/view_existing_groupx" />

    <ImageButton
        android:id="@+id/addUserToGroupOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:background="@android:color/transparent"
        android:layout_marginTop="15dp"
        android:src="@drawable/add_users_to_groupx" />

    <ImageButton
        android:id="@+id/leaveGroupOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:background="@android:color/transparent"
        android:layout_marginTop="15dp"
        android:src="@drawable/leave_groupx" />

</LinearLayout>