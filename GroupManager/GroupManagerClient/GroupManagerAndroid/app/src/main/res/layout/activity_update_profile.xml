<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="1">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/update_title"/>

    <EditText
        android:id="@+id/textFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:ems="10"
        android:hint="@string/new_fist_name_hint"
        android:textColorHint="#ffc9bfcc"
        android:textColor="#178eff6a"
        android:textSize="30dp">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/textLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:ems="10"
        android:hint="@string/new_last_name_hint"
        android:textColorHint="#ffc9bfcc"
        android:textColor="#ffe7ffe9"
        android:textSize="30dp">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/new_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:ems="10"
        android:hint="@string/email_hint"
        android:textColorHint="#ffc9bfcc"
        android:textColor="#ffe7ffe9"
        android:textSize="30dp"
        android:editable="false">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/new_password_hint"
        android:textColorHint="#ffc9bfcc"
        android:textColor="#ffe7ffe9"
        android:textSize="30dp">
        <requestFocus />
    </EditText>

    <EditText
    android:id="@+id/new_retyped_Password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPassword"
    android:hint="@string/retype_password_hint"
    android:textColorHint="#ffc9bfcc"
    android:textColor="#ffe7ffe9"
    android:textSize="30dp">
    <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/oldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/type_old_password_hint"
        android:textColorHint="#ffc9bfcc"
        android:textColor="#ffe7ffe9"
        android:textSize="30dp">
        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/UpdateProfile"
        android:layout_width="988dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:layout_marginTop="50dp"
        android:layout_weight="0.13"
        android:background="@android:color/transparent"
        android:src="@drawable/update_profilex" />
        />


</LinearLayout>